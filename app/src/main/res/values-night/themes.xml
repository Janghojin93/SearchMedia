<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SearchMedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_dark</item>
        <item name="colorPrimaryVariant">@color/base_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_gray</item>
        <item name="colorSecondaryVariant">@color/base_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="search_background">
        <item name="android:background">@color/base_dark</item>
    </style>

    <style name="search_edittext_style">
        <item name="startIconDrawable">@drawable/ic_baseline_search_24</item>
        <item name="hintTextColor">@color/base_white</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="android:hint">@string/search_hint</item>

    </style>


</resources>